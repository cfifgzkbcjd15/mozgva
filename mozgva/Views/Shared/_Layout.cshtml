<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <link rel="icon" href="https://psv4.userapi.com/c536436/u224929404/docs/d3/29fada1efcf6/logotip20.png?extra=-hUeGbW4zUWRnyND-GuGlH3BZTQuJHddmT48hzio_R9zLnvyjugQ8z3qqNpT4dmGn6MpJCS38h-eesfLn0nbvW8gNsmB4poNj1zBEM1W9wAZWwJl-pkS4aLNSXC_rCyDayslsoKfeATFmI4K-xyYcDYH" />
    <script src="https://kit.fontawesome.com/9a4928363c.js" crossorigin="anonymous"></script>
    <script></script>
    <style>
        body {
            font-size: 15px;
            background: url("../../Photo/fon.jpg");
        }

        .no_autorize {
            position: absolute;
            left: 50%;
            margin-left: -40%;
            width: 80%;
            background: white;
        }
    </style>
</head>

<body>
    @if (User.Identity.IsAuthenticated)
    {
        <header>
            <nav style="border-bottom: 1px solid #b8cadc00 !important; background: #EEF0F2; width: 100%; " class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom  mb-3">
                <div class="container" style="width:100%;">
                    <a class="navbar-brand" style="color: rgb(108 108 255);margin-right:15px" asp-area="" asp-controller="Home" asp-action="Index">Главная</a>

                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item" style="margin-left:auto">
                            <form method="post" asp-controller="Account" asp-action="Logout">
                                    <div style="display: inline-block;">
                                       
                                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="LichnKab">
                                            <i class="fa fa-user"></i>
                                        </a>
                                        
                                    </div>
                                <label class="upload-file__label" for="upload-file__input_output">
                                    <i class="fas fa-sign-out-alt"></i>
                                </label>
                                <input hidden id="upload-file__input_output" type="submit" value="Выход" />
                            </form>
                        </li>

                        @*else
                            {
                            <li class="nav-item" style="margin-left:auto">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Вход</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Register">Регистрация</a>
                            </li>
                            }*@

                    </ul>
                </div>
            </nav>
        </header>
        <div class="container" style=" border-radius: 10px; height: 100%; min-height: 525px; background: white; ">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    }
    else
    {
        <div class="no_autorize">
            <main role="main">
                @RenderBody()
            </main>
        </div>
    }


    @*<footer class="border-top footer text-muted">
            <div class="container">
                &copy;<a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.21.1/axios.min.js"></script>
    <script src="https://unpkg.com/vue/dist/vue.js"></script>
    <script src="https://unpkg.com/vue-router/dist/vue-router.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

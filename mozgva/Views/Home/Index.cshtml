@model IEnumerable<mozgva.Models.Product>
@{
    ViewBag.Title = "Главная";
}
<style>
    h1, h2, h3 {
        color: rgb(59 31 145);
        margin-right: 15px
    }

    div#heder_info.row {
        color: white;
        height: 50%;
    }

    div#heder_info-video.col-6 {
        width: 58%;
        padding: inherit;
    }

    div#info.col-6 {
        background: #1B43CB;
        width: 42%;
        height: auto;
        padding: 24px 30px 24px 30px;
    }

    a.franchise_link {
        font-family: "Montserrat-Bold",sans-serif;
        font-size: 16px;
        line-height: 150%;
        color: #F2F3F8;
        margin-left: 40px;
    }

    div.social_wrap {
        text-align: right;
        padding-left: 1em;
    }

    div.step.step_1 {
        margin-top: 55px;
        transition: opacity .5s ease;
    }

    div.title {
        font-family: "IgraSans",sans-serif;
        font-size: 45px;
        line-height: 110%;
        color: #FFFFFF;
        margin-bottom: 40px;
        margin-left: -2px;
    }

    div.header_img {
        position: relative;
        display: flex;
        width: 58%;
    }

    video#mozgva_home_video {
        width: 100%;
        object-fit: contain;
    }

    div#btn_player {
        cursor: pointer;
        position: absolute;
        top: calc(50% - 133px);
        left: calc(50% - 133px);
    }

    img.play {
        width: 266px;
        height: 266px;
    }

    footer.page-footer {
        padding: 27px 15px 14px 30px;
        background-color: #A4D5F1;
    }

    p.left_desc {
        width: 280px;
        font-family: "Montserrat",sans-serif;
        margin-left: 0;
        font-size: 16px;
        line-height: 150%;
        color: #1B43CB;
        margin-top: 81px;
        text-align: left;
        margin-bottom: 0;
    }

    h2.title {
        font-family: "Montserrat-Bold",sans-serif;
        font-size: 16px;
        line-height: 150%;
        color: #1B43CB;
    }

    p {
        margin-top: 45px;
        margin-left: 20px;
    }

    div.circle.c1 {
        background: #BD5EDE;
        position: relative;
        margin-left: -20px;
        width: 160px;
        height: 160px;
        border-radius: 50%;
        border: 2px solid #A4D5F1;
    }

    div.circle.c2 {
        background: #BD5EDE;
        position: relative;
        margin-left: -20px;
        width: 160px;
        height: 160px;
        border-radius: 50%;
        border: 2px solid #A4D5F1;
    }

    div.circle.c3 {
        background: #BD5EDE;
        position: relative;
        margin-left: -20px;
        width: 160px;
        height: 160px;
        border-radius: 50%;
        border: 2px solid #A4D5F1;
    }

    div.col.s4 {
        padding-left: 0;
    }

    footer#footer-info.page-footer {
        background: #242424;
    }
    .counter {
        display: flex;
        flex-wrap: wrap;
        width: 100%;
        margin: 0 auto;
        justify-content: space-evenly;
    }

        .counter img {
            display: block;
            margin: 5px;
            width: 344px;
            height:242px;
            white-space: nowrap;
        }

            .counter img:nth-child(n) {
                order: 1;
            }

        .counter p:nth-child(n) {
            order: 2;
        }

        .counter p:nth-child(3n) {
            order: 3;
        }

        .counter p {
            display: block;
            margin: 5px;
            width: 300px;
            word-break:break-all;
        }
</style>
    <div class="row" id="heder_info">
        <div class="col-6" id="info">
            <div class="row">
                <div class="col-6">
                    <a class="logo" href="#">
                        <img src="Photo/logotip20.png" alt="Logo">
                    </a>
                    <a class="franchise_link" target="_blank" href="https://franchise.mozgva.com/">Франшиза</a>
                </div>
                <div class="col-6 ">
                    <div class="social_wrap">
                        <a class="fb" target="_blank" href="https://www.facebook.com/etomozgvadetka/"><img src="Photo/facebook.png" alt="Fb"></a>
                        <a class="vk" target="_blank" href="https://vk.com/etomozgvadetka"><img src="Photo/vk.png" alt="Vk"></a>
                        <a class="vk" target="_blank" href="https://www.instagram.com/mozgva_msk/"><img src="Photo/inst.png" alt="Instagram"></a>
                        <a class="vk" target="_blank" href="https://telega.at/mozgvaonline"><img src="Photo/teleg.png" alt="Telegram"></a>
                    </div>
                </div>
            </div>

            <div class="main_content">
                <div class="step step_1">
                    <div class="title" style="display: block;">
                        <p class="flow-text">
                            Интеллектуальна<br />
                            развлекательная<br />
                            онлайн-игра
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-6" id="heder_info-video">

            <video id="mozgva_home_video" poster="Photo/fon-video.png">
                <source src="Photo/mozgva_home2.mp4" type="video/mp4; codecs=&quot;avc1.42E01E, mp4a.40.2&quot;">
                Тег video не поддерживается вашим браузером.
            </video>
            <div id="btn_player">
                <img class="play" src="Photo/video-play.png" alt="Video btn">
            </div>
        </div>
    </div>
    <div id="app" style="background:white">
        <router-link to="/product">Игры</router-link>
        <center>
            <div>
                <router-view></router-view>
            </div>
        </center>
    </div>
    <footer class="page-footer">
        <div id="o-igre">
            <div class="row">
                <div class="col s12">
                    <h5 class="white-text">Что будет на игре</h5>
                </div>
                <div class="row">
                    <div class="col s4">
                        <p class="left_desc">
                            Соберите команду, устройтесь<br>на диване или организуйте<br> видеконференцию и проведите<br> вечер с удовольствием!
                        </p>
                    </div>
                    <div class="col s3">
                        <h2 class="title">С вас:</h2>
                        <div class="row">
                            <div class="circle c1">
                                <p>Хороший<br>интернет</p>
                            </div>
                            <div class="circle c2">
                                <p>Команда<br>от 2-х чел</p>
                            </div>
                            <div class="circle c3">
                                <p>Желание<br>пошевелить<br>мозгами</p>
                            </div>
                        </div>
                    </div>
                    <div class="col s4">
                        <h2 class="title">С нас:</h2>
                        <div class="row">
                            <div class="circle c1">
                                <p>Ведущий и<br>вопросы в<br>прямом эфире</p>
                            </div>
                            <div class="circle c2">
                                <p>Удобные<br>электронные<br>бланки для<br>ответов</p>
                            </div>
                            <div class="circle c3">
                                <p>Проверка<br>результатов<br>онлайн</p>
                            </div>
                            <div class="circle c3">
                                <p>Служба<br>поддержки<br>во время игры</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <footer class="page-footer" id="footer-info">
        <div class="container">
            <div class="row">
                <div class="col l4 s12">
                    <ul>
                        <li>
                            <a class="grey-text text-lighten-3" href="#!">Календарь игр</a>
                        </li>
                        <li>
                            <a class="grey-text text-lighten-3" href="#!">Франшиза</a>
